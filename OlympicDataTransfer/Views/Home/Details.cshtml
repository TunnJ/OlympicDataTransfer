@model CountryViewModel
@{
    ViewBag.Title = "Country Details";
}

<h2>Country Details</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/Flags/@Model.Country.FlagImage" />
                <h3>@Model.Country.CountryName</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.Game.GameName</h4>
            </li>
            <li class="list-group-item">
                <h4>Category: @Model.Country.Category.CatName</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                    <a asp-action="Index" class="btn btn-primary" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCat="@Model.ActiveCat">
                        Return to Home Page
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>
                    <input type="hidden" asp-for="Country.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>